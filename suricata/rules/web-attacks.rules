# Regole per rilevare attacchi web comuni

# SQL Injection
alert http any any -> $HOME_NET any (msg:"SQL Injection - SELECT Statement"; flow:established,to_server; content:"SELECT"; http_uri; nocase; classtype:web-application-attack; sid:2000001; rev:1;)
alert http any any -> $HOME_NET any (msg:"SQL Injection - UNION Statement"; flow:established,to_server; content:"UNION"; http_uri; nocase; classtype:web-application-attack; sid:2000002; rev:1;)

# XSS Attacks
alert http any any -> $HOME_NET any (msg:"XSS Attack - Script Tag"; flow:established,to_server; content:"<script"; http_uri; nocase; classtype:web-application-attack; sid:2000003; rev:1;)

# Directory Traversal
alert http any any -> $HOME_NET any (msg:"Directory Traversal Attack"; flow:established,to_server; content:"../"; http_uri; classtype:web-application-attack; sid:2000004; rev:1;)

# File Inclusion
alert http any any -> $HOME_NET any (msg:"Remote File Inclusion Attack"; flow:established,to_server; content:".php?file=http"; http_uri; classtype:web-application-attack; sid:2000005; rev:1;)