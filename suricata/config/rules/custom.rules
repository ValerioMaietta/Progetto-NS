# ./suricata/config/rules/custom.rules

# Regola per rilevare tentativi di SQL Injection
alert http any any -> any any (msg:"SQL Injection Attempt"; content:"UNION SELECT"; nocase; sid:1000001; rev:1;)
alert http any any -> any any (msg:"SQL Injection Attempt - OR Condition"; content:"OR '1'='1"; nocase; sid:1000002; rev:1;)

# Regola per rilevare scansioni di porte
alert tcp any any -> any any (msg:"Port Scan Detected"; flags:S; threshold:type both,track by_src,count 50,seconds 60; sid:1000003; rev:1;)

# Regola per rilevare possibili attacchi DoS
alert tcp any any -> any any (msg:"Possible DoS Attack"; flags:S; threshold:type both,track by_src,count 100,seconds 10; sid:1000004; rev:1;)